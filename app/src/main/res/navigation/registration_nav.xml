<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/registration_nav"
    app:startDestination="@id/registrationFragment">

    <fragment
        android:id="@+id/registrationFragment"
        android:name="com.jmballangca.dailygrindexpressclient.views.registration.RegistrationFragment"
        android:label="Regitration"
        tools:layout="@layout/fragment_registration" >
        <action
            android:id="@+id/action_registrationFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/action_registrationFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.jmballangca.dailygrindexpressclient.views.registration.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_mainActivity"
            app:destination="@id/mainActivity" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.jmballangca.dailygrindexpressclient.views.registration.SignUpFragment"
        android:label="Sign Up"
        tools:layout="@layout/fragment_sign_up" >
        <action
            android:id="@+id/action_signUpFragment_to_verificationFragment"
            app:destination="@id/verificationFragment" />

    </fragment>
    <fragment
        android:id="@+id/verificationFragment"
        android:name="com.jmballangca.dailygrindexpressclient.views.registration.VerificationFragment"
        android:label="Verification"
        tools:layout="@layout/fragment_verification" >
        <argument
            android:name="phone"
            app:argType="string" />
        <action
            android:id="@+id/action_verificationFragment_to_accountInfoFragment"
            app:destination="@id/accountInfoFragment" />
    </fragment>
    <fragment
        android:id="@+id/accountInfoFragment"
        android:name="com.jmballangca.dailygrindexpressclient.views.registration.AccountInfoFragment"
        android:label="Registration"
        tools:layout="@layout/fragment_account_info" >
        <argument
            android:name="phone"
            app:argType="string" />
        <argument
            android:name="otp"
            app:argType="string" />
        <action
            android:id="@+id/action_accountInfoFragment_to_registrationFragment"
            app:destination="@id/registrationFragment" />
        <action
            android:id="@+id/action_accountInfoFragment_to_mainActivity"
            app:destination="@id/mainActivity" />

    </fragment>
    <activity
        android:id="@+id/mainActivity"
        android:name="com.jmballangca.dailygrindexpressclient.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
</navigation>